{
  "name": "@shadowspawn/forest-arborist",
  "version": "4.1.3",
  "description": "Forest Arborist. A loosely coupled repository manager inspired by Mercurial subrepositories, npm, and Git.",
  "keywords": [
    "git",
    "hg",
    "mercurial"
  ],
  "bin": {
    "fab": "./dist/src/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shadowspawn/forest-arborist.git"
  },
  "scripts": {
    "create-playground": "node dist/dev/create-playground",
    "lint": "tslint --project .",
    "prepare": "tsc",
    "pull": "git pull && npm install && npm test",
    "release": "node dist/dev/release",
    "smoketest": "node dist/dev/smoketest",
    "test": "jest --silent --verbose"
  },
  "author": "John Gee",
  "license": "MIT",
  "files": [
    "dist/src/*.js",
    "resources/*"
  ],
  "jest": {
    "globals": {
      "JEST_RUNNING": true
    },
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^2.19.0",
    "fs-extra": "^7.0.1",
    "shell-quote": "^1.6.1",
    "tmp": "0.0.33"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.5",
    "@types/jest": "^24.0.9",
    "@types/node": "^10.12.30",
    "@types/shell-quote": "^1.6.1",
    "@types/tmp": "0.0.34",
    "jest": "^24.3.1",
    "ts-jest": "^24.0.0",
    "tslint": "^5.13.1",
    "typescript": "^3.3.3333"
  },
  "bugs": {
    "url": "https://github.com/shadowspawn/forest-arborist/issues"
  },
  "optionalDependencies": {},
  "directories": {
    "doc": "./docs",
    "test": "./tests"
  }
}
