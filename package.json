{
  "name": "@shadowspawn/forest-arborist",
  "version": "1.2.1-0",
  "description": "Forest Arborist. A loosely coupled repository manager inspired by Mercurial subrepositories, npm, and Git.",
  "keywords": [
    "git",
    "hg",
    "mercurial"
  ],
  "bin": {
    "fab": "./dist/src/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JohnRGee/forest-arborist.git"
  },
  "scripts": {
    "copy-down": "git checkout develop && git merge master && tsc && npm --no-git-tag-version version prepatch",
    "copy-up": "git checkout master && git merge develop && tsc && echo \"Now bump version appropriately, e.g. run npm version patch && git commit && git push && npm publish\"",
    "create-playground": "node dist/tests/create-playground",
    "prepare": "tsc",
    "pull": "git pull && npm install && npm test",
    "test": "jest --silent --verbose",
    "test:unit": "jest --silent --verbose unit",
    "test:integration": "jest --silent --verbose .int",
    "test:system": "jest --silent --verbose system",
    "lint": "tslint --project ."
  },
  "author": "John Gee",
  "license": "MIT",
  "files": [
    "dist/src/*.js"
  ],
  "jest": {
    "globals": {
      "JEST_RUNNING": true
    },
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "commander": "^2.15.1",
    "fs-extra": "^6.0.1",
    "shell-quote": "^1.6.1",
    "tabtab": "^2.2.2",
    "tmp": "0.0.33"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.2",
    "@types/jest": "^22.2.3",
    "@types/node": "^8.10.16",
    "@types/shell-quote": "^1.6.0",
    "@types/tmp": "0.0.33",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  },
  "bugs": {
    "url": "https://github.com/JohnRGee/forest-arborist/issues"
  },
  "optionalDependencies": {},
  "directories": {
    "doc": "./docs",
    "test": "./tests"
  }
}
