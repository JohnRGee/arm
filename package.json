{
  "name": "@shadowspawn/forest-arborist",
  "version": "6.0.0",
  "description": "Forest Arborist. A loosely coupled repository manager inspired by Mercurial subrepositories, npm, and Git.",
  "keywords": [
    "git",
    "hg",
    "mercurial"
  ],
  "bin": {
    "fab": "./dist/src/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shadowspawn/forest-arborist.git"
  },
  "scripts": {
    "create-playground": "node dist/dev/create-playground",
    "lint": "eslint ./src/**/*.ts ./dev/**/*.ts ./tests/**/*.ts",
    "prepare": "tsc",
    "pull": "git pull && npm install && npm test",
    "release": "node dist/dev/release",
    "smoketest": "node dist/dev/smoketest",
    "test": "jest --silent"
  },
  "author": "John Gee",
  "license": "MIT",
  "files": [
    "dist/src/*.js",
    "npm-shrinkwrap.json",
    "resources/*"
  ],
  "jest": {
    "globals": {
      "JEST_RUNNING": true
    },
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "commander": "^5.0.0",
    "fs-extra": "^9.0.0",
    "shell-quote": "^1.7.2",
    "tmp": "^0.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^25.2.1",
    "@types/node": "^12.12.35",
    "@types/shell-quote": "^1.6.1",
    "@types/tmp": "^0.1.0",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "acorn": "^7.1.0",
    "eslint": "^6.8.0",
    "jest": "^25.3.0",
    "ts-jest": "^25.3.1",
    "typescript": "^3.7.4"
  },
  "bugs": {
    "url": "https://github.com/shadowspawn/forest-arborist/issues"
  },
  "optionalDependencies": {},
  "directories": {
    "doc": "./docs",
    "test": "./tests"
  },
  "engines": {
    "node": ">= 10"
  }
}
