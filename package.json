{
  "name": "@shadowspawn/forest-arborist",
  "version": "4.1.0",
  "description": "Forest Arborist. A loosely coupled repository manager inspired by Mercurial subrepositories, npm, and Git.",
  "keywords": [
    "git",
    "hg",
    "mercurial"
  ],
  "bin": {
    "fab": "./dist/src/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JohnRGee/forest-arborist.git"
  },
  "scripts": {
    "create-playground": "node dist/dev/create-playground",
    "lint": "tslint --project .",
    "prepare": "tsc",
    "pull": "git pull && npm install && npm test",
    "release": "node dist/dev/release",
    "smoketest": "node dist/dev/smoketest",
    "test": "jest --silent --verbose"
  },
  "author": "John Gee",
  "license": "MIT",
  "files": [
    "dist/src/*.js",
    "resources/*"
  ],
  "jest": {
    "globals": {
      "JEST_RUNNING": true
    },
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "commander": "^2.19.0",
    "fs-extra": "^7.0.1",
    "shell-quote": "^1.6.1",
    "tmp": "0.0.33"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.10",
    "@types/shell-quote": "^1.6.0",
    "@types/tmp": "0.0.33",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "bugs": {
    "url": "https://github.com/JohnRGee/forest-arborist/issues"
  },
  "optionalDependencies": {},
  "directories": {
    "doc": "./docs",
    "test": "./tests"
  }
}
