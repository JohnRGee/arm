{
  "name": "@shadowspawn/forest-arborist",
  "version": "1.1.1-0",
  "description": "Forest Arborist. A loosely coupled repository manager inspired by Mercurial subrepositories, npm, and Git.",
  "bin": {
    "fab": "./dist/command.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JohnRGee/forest-arborist.git"
  },
  "scripts": {
    "copy-down": "git checkout develop && git merge master && npm --no-git-tag-version version prepatch",
    "copy-up": "git checkout master && git merge develop && echo \"Now bump version appropriately, e.g. run npm version patch && git commit && git push && npm publish\"",
    "prepare": "tsc",
    "pull": "git pull && npm prune && npm install && npm test",
    "test": "jest --silent",
    "test:cli-only": "jest tests/command.test.ts",
    "lint": "tslint --project tsconfig.json src/**/*.ts{,x}"
  },
  "author": "John Gee",
  "license": "MIT",
  "files": [
    "dist/command.js",
    "dist/src/*"
  ],
  "jest": {
    "globals": {
      "JEST_RUNNING": true
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "dependencies": {
    "chalk": "^2.3.0",
    "commander": "^2.13.0",
    "jsonfile": "^4.0.0",
    "mute": "^2.0.6",
    "shell-quote": "^1.6.1",
    "tabtab": "^2.2.2",
    "tmp": "0.0.33"
  },
  "devDependencies": {
    "@types/jest": "^22.1.1",
    "@types/node": "^9.4.0",
    "@types/tmp": "0.0.33",
    "jest": "^22.1.4",
    "ts-jest": "^22.0.3",
    "typescript": "^2.7.1"
  },
  "bugs": {
    "url": "https://github.com/JohnRGee/forest-arborist/issues"
  },
  "optionalDependencies": {
    "tslint": "^5.9.1"
  }
}
